{
    "breadcrumbs.enabled": false,
    "custom-ui-style.stylesheet": {
        ".editor-actions": "display: none !important;",
        ".editor-widget.find-widget": "box-shadow: none; border-radius: 4px;",
        ".explorer-folders-view .monaco-list-row": "padding-left: 0 !important;",
        ".monaco-action-bar.quick-input-inline-action-bar": "display: none;",
        ".monaco-editor .decorationsOverviewRuler": "display: none !important;",
        ".monaco-editor .minimap-slider": "display: none !important;",
        ".monaco-editor .minimap-decorations-layer": "display: none !important;",
        ".monaco-scrollable-element > .scrolbar": "right: 0 !important;",
        ".monaco-scrollable-element > .shadow.top": "display: none;",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title.title-border-bottom:after": "display: none;",
        ".monaco-workbench .part.editor > .content .editor-group-container > .title": "margin-left: 70px !important;",
        ".notification-toast": "box-shadow: none !important;",
        ".part.titlebar": "border: none !important;",
        ".quick-input-list .scrollbar": "display: none;",
        ".quick-input-widget.show-file-icons": "box-shadow: none !important;",
        ".sidebar .title-label": "padding: 0 !important;",
        ".title-actions": "display: none !important;",
        ".titlebar-container .titlebar-left": "display: none !important;",
        ".titlebar-container .titlebar-center": "display: none !important;"
    },
    "editor.glyphMargin": true,
    "editor.fontSize": 12,
    "editor.lineHeight": 1.8,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 2,
    "editor.stickyScroll.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.tabSize": 2,
    "explorer.compactFolders": false,
    "explorer.decorations.badges": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "afterDelay",
    "github.copilot.nextEditSuggestions.enabled": true,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "material-icon-theme.hidesExplorerArrows": true,
    "window.zoomLevel": 1.5,
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Winter is Coming (Dark Blue - No Italics)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false, 
    "workbench.tree.enableStickyScroll": false
}
